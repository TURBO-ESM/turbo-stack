include $(TEMPLATE)

build_amrex:
	cmake -S ${AMREX_ROOT} -B ${BLD_PATH} -DCMAKE_Fortran_FLAGS="$(FFLAGS)" -DAMReX_FORTRAN_INTERFACES=YES -DAMReX_FORTRAN=YES -DCMAKE_INSTALL_PREFIX=${AMREX_INSTALL_PATH} -DCMAKE_Fortran_COMPILER=$(FC) -DCMAKE_CXX_COMPILER=$(CXX) -DCMAKE_C_COMPILER=$(CC); \
	cd ${BLD_PATH}; \
	make -j${JOBS}; \
	make install
