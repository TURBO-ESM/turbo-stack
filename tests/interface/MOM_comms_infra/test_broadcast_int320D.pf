module test_broadcast_int320D
  use pfunit
  use MOM_coms_infra
  use MOM_test_case
  use iso_fortran_env, only : int32
  implicit none

  @testCase()
  type, extends(MOM_MPI_test_case) :: testcase_broadcast
  end type testcase_broadcast

contains

  @test(npes=[4])
  subroutine test_bcast_int32_0D(this)
    class (testcase_broadcast), intent(inout) :: this
    integer(kind=int32) :: value 
    integer(kind=int32) :: rank, actual
    integer(kind=int32), parameter :: zero = 0, one = 1

    rank = this%getProcessRank()

    value = rank
    !--------------------------------------
    ! Broadcast from the default root rank 
    !--------------------------------------
    call broadcast(value)

    actual = value
    @assertEqual(actual, zero)

    value = rank
    !---------------------------------
    ! Broadcast from non-default rank
    ! using optional argument from_PE
    !---------------------------------
    call broadcast(value,from_PE=1)

    actual = value
    @assertEqual(actual, one)

  end subroutine test_bcast_int32_0D

end module test_broadcast_int320D
