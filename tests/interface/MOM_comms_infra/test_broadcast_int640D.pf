module test_broadcast_int640D
  use pfunit
  use MOM_coms_infra
  use MOM_test_case
  use iso_fortran_env, only : int64
  implicit none

  @testCase()
  type, extends(MOM_MPI_test_case) :: testcase_broadcast
  end type testcase_broadcast

contains

  @test(npes=[4])
  subroutine test_bcast_int64_0D(this)
    class (testcase_broadcast), intent(inout) :: this
    integer(kind=int64) :: actual, expected 
    integer(kind=int64) :: rank

    rank = this%getProcessRank()

    actual = rank
    !--------------------------------------
    ! Broadcast from the default root rank 
    !--------------------------------------
    call broadcast(actual)

    expected = 0
    @assertEqual(expected, actual)

    actual = rank
    !---------------------------------
    ! Broadcast from non-default rank
    ! using optional argument from_PE
    !---------------------------------
    call broadcast(actual, from_PE=1)

    expected = 1
    @assertEqual(expected, actual)

  end subroutine test_bcast_int64_0D

end module test_broadcast_int640D
