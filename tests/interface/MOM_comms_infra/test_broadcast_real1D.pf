module test_broadcast_real1D
  use pfunit
  use MOM_coms_infra
  use MOM_test_case
  use iso_fortran_env, only : int32, real64
  implicit none

  @testCase()
  type, extends(MOM_MPI_test_case) :: testcase_broadcast
  end type testcase_broadcast

contains

  @test(npes=[4])
  subroutine test_bcast_real1D(this)
    class (testcase_broadcast), intent(inout) :: this

    real(kind=real64),allocatable :: value(:)

    integer(kind=int32), parameter :: len1 = 20
    real(kind=real64), parameter :: one = 1.0, zero = 0.0
    real(kind=real64) :: rank, actual

    rank = dble(this%getProcessRank())

    allocate(value(len1))

    value = rank
    !--------------------------------------
    ! Broadcast from the default root rank
    !--------------------------------------
    call broadcast(value,len1)

    actual = value(5)
    @assertEqual(zero, actual)

    value = rank
    !--------------------------------------
    ! Broadcast from the non-default rank
    !--------------------------------------
    call broadcast(value,len1,from_PE=1)

    actual = value(5)
    @assertEqual(one, actual)

    deallocate(value)

  end subroutine test_bcast_real1D

end module test_broadcast_real1D
