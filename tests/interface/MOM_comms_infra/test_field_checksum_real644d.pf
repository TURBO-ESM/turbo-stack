module test_field_checksum_real644d
  use pfunit
  use MOM_coms_infra
  use MOM_test_case
  use iso_fortran_env, only : int64, real64
  implicit none

  @testCase()
  type, extends(MOM_MPI_test_case) :: testcase_broadcast
  end type testcase_broadcast

contains

  @test(npes=[4])
  subroutine field_checksum_real644d(this)
    class (testcase_broadcast), intent(inout) :: this

    real,                parameter :: field(5,5,5,5)    = 1.0
    integer(kind=int64), parameter :: expected_checksum = -90071992547409920
    integer(kind=int64)            :: actual_checksum

    actual_checksum = field_chksum(field)

    @assertEqual(expected_checksum, actual_checksum)
  end subroutine field_checksum_real644d
end module test_field_checksum_real644d