module test_field_checksum_real64_0d_masked
  use pfunit
  use MOM_coms_infra
  use MOM_test_case
  use iso_fortran_env, only : int64, real64
  implicit none

  @testCase()
  type, extends(MOM_MPI_test_case) :: field_checksum_0d_masked_testcase
  end type field_checksum_0d_masked_testcase

contains

  @test(npes=[4])
  subroutine field_checksum_real64_0d_masked(this)
    class (field_checksum_0d_masked_testcase), intent(inout) :: this

    real                           :: field             = 4.0
    real                           :: mask              = 4.0
    integer(kind=int64), parameter :: expected_checksum = 0
    integer(kind=int64)            :: actual_checksum

    actual_checksum = field_chksum(field, mask_val=mask)

    @assertEqual(expected_checksum, actual_checksum)
  end subroutine field_checksum_real64_0d_masked
end module test_field_checksum_real64_0d_masked
